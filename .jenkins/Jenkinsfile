#!/usr/bin/env groovy
/**
 * CI Pipeline for uniteDiscord
 *
 * This is a thin loader that delegates to the shared library.
 * All pipeline logic lives in: https://github.com/steiner385/unitediscord-jenkins-lib
 *
 * This decoupling allows CI infrastructure changes without being blocked
 * by application-level branch protection rules.
 *
 * Webhook Setup:
 *   URL: https://jenkins.kindash.com/generic-webhook-trigger/invoke?token=uniteDiscord-ci
 *   Content type: application/json
 *   Events: Push events, Pull request events
 */

@Library('unitediscord-lib@main') _

standardPipeline(
    githubOwner: 'steiner385',
    githubRepo: 'uniteDiscord',
    webhookToken: 'uniteDiscord-ci',
    statusContext: 'Jenkins CI'
)
