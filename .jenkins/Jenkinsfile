#!/usr/bin/env groovy
/**
 * Main CI Pipeline for uniteDiscord
 *
 * This pipeline uses composable shared library functions from .jenkins/vars/
 * that auto-detect the package manager (pnpm, yarn, npm) and provide
 * consistent GitHub status reporting.
 *
 * Pipeline Stages:
 *   1. Initialize - Checkout, extract git info, report pending status
 *   2. Install Dependencies - Auto-detect package manager, install deps
 *   3. Build Packages - Build shared packages in monorepo
 *   4. Lint - Run ESLint and format checks
 *   5. Unit Tests - Run vitest with coverage
 *   6. Build - Build production artifacts
 *
 * Status Reporting:
 *   - Reports 'Jenkins CI' context to GitHub for branch protection
 *   - Individual stages can report their own contexts (e.g., 'jenkins/lint')
 */

@Library('unitediscord-lib@main') _

pipeline {
    agent any

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '30'))
        timeout(time: 60, unit: 'MINUTES')
        disableConcurrentBuilds(abortPrevious: true)
    }

    triggers {
        // Automatically trigger builds when GitHub sends webhook on push/merge to any branch
        githubPush()
    }

    environment {
        GITHUB_OWNER = 'steiner385'
        GITHUB_REPO = 'uniteDiscord'
        CI = 'true'
        NODE_ENV = 'test'
        PATH = "/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
    }

    stages {
        stage('Initialize') {
            steps {
                // Use shared library for initialization
                pipelineInit(
                    statusContext: 'Jenkins CI',
                    statusDescription: 'Build in progress'
                )
                // Clean up stale test directories
                sh 'rm -rf frontend/frontend || true'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Auto-detects pnpm from pnpm-lock.yaml
                installDependencies()
            }
        }

        stage('Build Packages') {
            steps {
                script {
                    def pm = pipelineHelpers.getPackageManager()
                    // Build shared packages in monorepo
                    sh "${pm.filter} \"./packages/*\" -r run build"
                }
            }
        }

        stage('Lint') {
            steps {
                // Uses auto-detected package manager
                runLintChecks(
                    skipTypeCheck: true,  // Type checking done during build
                    skipCheckout: true,   // Already checked out
                    statusContext: 'jenkins/lint'
                )
            }
        }

        stage('Unit Tests') {
            steps {
                script {
                    def pm = pipelineHelpers.getPackageManager()

                    // Try to inject AWS credentials if available
                    try {
                        withAwsCredentials {
                            sh "${pm.run} test:unit -- --coverage"
                        }
                    } catch (Exception e) {
                        echo "WARNING: AWS credentials not available: ${e.message}"
                        sh "${pm.run} test:unit -- --coverage"
                    }
                }
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: 'coverage/junit.xml'
                }
            }
        }

        stage('Build') {
            steps {
                // Uses auto-detected package manager
                buildProject(skipCheckout: true)
            }
        }
    }

    post {
        success {
            echo 'Build succeeded!'
            githubStatusReporter(
                status: 'success',
                context: 'Jenkins CI',
                description: 'All checks passed'
            )
        }
        failure {
            echo 'Build failed!'
            githubStatusReporter(
                status: 'failure',
                context: 'Jenkins CI',
                description: 'Build or tests failed'
            )
        }
    }
}
