#!/usr/bin/env groovy
/**
 * CI Pipeline for uniteDiscord
 *
 * Pipeline structure stays here (required by Jenkins Declarative syntax).
 * Stage implementations are in the shared library for reusability.
 *
 * Shared library: https://github.com/steiner385/unitediscord-jenkins-lib
 *
 * Webhook Setup:
 *   URL: https://jenkins.kindash.com/generic-webhook-trigger/invoke?token=uniteDiscord-ci
 *   Content type: application/json
 *   Events: Push events only (pull_request events are filtered out to prevent duplicates)
 */

@Library('unitediscord-lib@main') _

pipeline {
    agent any

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '30'))
        timeout(time: 60, unit: 'MINUTES')
        disableConcurrentBuilds(abortPrevious: true)
    }

    triggers {
        GenericTrigger(
            genericVariables: [
                // Push event variables
                [key: 'ref', value: '$.ref'],
                [key: 'after', value: '$.after'],
                [key: 'pusher_name', value: '$.pusher.name', defaultValue: 'unknown'],
                // Pull request event variables
                [key: 'pr_head_ref', value: '$.pull_request.head.ref'],
                [key: 'pr_head_sha', value: '$.pull_request.head.sha'],
                [key: 'pr_action', value: '$.action'],
                // Common
                [key: 'repository_name', value: '$.repository.name']
            ],
            causeString: 'Triggered by push to $ref by $pusher_name',
            token: 'uniteDiscord-ci',
            printContributedVariables: true,
            printPostContent: false,
            silentResponse: false,
            // Filter to only trigger on push events (which have ref), not pull_request events
            // This prevents duplicate builds when PR is merged (which sends both events)
            regexpFilterText: '$ref',
            regexpFilterExpression: 'refs/heads/.*'
        )
    }

    environment {
        GITHUB_OWNER = 'steiner385'
        GITHUB_REPO = 'uniteDiscord'
        CI = 'true'
        NODE_ENV = 'test'
        PATH = "/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
        // Note: 'ref' and 'after' come from Generic Webhook Trigger as env vars, not params
    }

    stages {
        stage('Initialize') {
            steps {
                script {
                    // Generic Webhook Trigger provides 'ref' and 'after' as env vars
                    // For push events: $.ref and $.after
                    // For pull_request events: need $.pull_request.head.ref and $.pull_request.head.sha
                    def webhookRef = env.ref ?: env.pr_head_ref ?: ''
                    def webhookCommit = env.after ?: env.pr_head_sha ?: ''

                    // Extract branch name from ref (refs/heads/main -> main)
                    def checkoutBranch = webhookRef ? webhookRef.replaceAll('refs/heads/', '') : 'main'

                    echo "Building branch: ${checkoutBranch}"
                    echo "Commit SHA from webhook: ${webhookCommit ?: 'not provided'}"

                    // Use STATUS_COMMIT_SHA instead of GIT_COMMIT because Jenkins pre-sets
                    // GIT_COMMIT during lightweight checkout (to fetch Jenkinsfile) and we
                    // cannot reliably override it. STATUS_COMMIT_SHA is our custom variable.
                    if (webhookCommit) {
                        env.STATUS_COMMIT_SHA = webhookCommit
                    }
                    env.BRANCH_NAME = checkoutBranch
                }

                // Report pending status BEFORE checkout (so failures are visible)
                githubStatusReporter(
                    status: 'pending',
                    context: 'Jenkins CI',
                    description: 'Build in progress'
                )

                script {
                    def checkoutCommit = env.STATUS_COMMIT_SHA ?: ''
                    def checkoutBranch = env.BRANCH_NAME ?: 'main'

                    // Checkout the specific branch/commit
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: checkoutCommit ?: "*/${checkoutBranch}"]],
                        userRemoteConfigs: [[
                            url: 'https://github.com/steiner385/uniteDiscord.git',
                            credentialsId: 'github-credentials'
                        ]]
                    ])

                    // If STATUS_COMMIT_SHA wasn't set from webhook, set it from checkout
                    if (!env.STATUS_COMMIT_SHA) {
                        env.STATUS_COMMIT_SHA = sh(script: 'git rev-parse HEAD', returnStdout: true).trim()
                    }

                    echo "Building commit: ${env.STATUS_COMMIT_SHA?.take(7)}"
                }

                // Clean up stale test directories
                sh 'rm -rf frontend/frontend || true'
            }
        }

        stage('Install Dependencies') {
            steps {
                installDependencies()
            }
        }

        stage('Build Packages') {
            steps {
                script {
                    def pm = pipelineHelpers.getPackageManager()
                    sh "${pm.filter} \"./packages/*\" -r run build"
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    def pm = pipelineHelpers.getPackageManager()
                    sh "${pm.run} lint"
                }
            }
        }

        stage('Unit Tests') {
            steps {
                script {
                    def pm = pipelineHelpers.getPackageManager()
                    try {
                        withAwsCredentials {
                            sh "${pm.run} test:unit -- --coverage"
                        }
                    } catch (Exception e) {
                        echo "WARNING: AWS credentials not available: ${e.message}"
                        sh "${pm.run} test:unit -- --coverage"
                    }
                }
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: 'coverage/junit.xml'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    def pm = pipelineHelpers.getPackageManager()
                    sh "${pm.run} build"
                }
            }
        }

        stage('Generate SBOM') {
            steps {
                generateSbom()
            }
        }
    }

    post {
        always {
            // Clean workspace after build to free disk space
            cleanWs(
                cleanWhenNotBuilt: false,
                deleteDirs: true,
                disableDeferredWipeout: true,
                notFailBuild: true
            )
        }
        success {
            echo 'Build succeeded!'
            githubStatusReporter(
                status: 'success',
                context: 'Jenkins CI',
                description: 'All checks passed'
            )
        }
        failure {
            echo 'Build failed!'
            githubStatusReporter(
                status: 'failure',
                context: 'Jenkins CI',
                description: 'Build or tests failed'
            )
        }
    }
}
