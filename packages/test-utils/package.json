{
  "name": "@reason-bridge/test-utils",
  "version": "0.1.0",
  "description": "Test utilities for reasonBridge services",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./prisma-mock": {
      "import": "./dist/prisma-mock.mjs",
      "require": "./dist/prisma-mock.cjs",
      "types": "./dist/prisma-mock.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@reason-bridge/db-models": "workspace:*",
    "vitest": "^4.0.18"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
