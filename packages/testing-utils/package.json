{
  "name": "@reason-bridge/testing-utils",
  "version": "0.1.0",
  "description": "Shared test helpers, mocks, and fixtures for reasonBridge",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "import": "./dist/mocks/index.js"
    },
    "./fixtures": {
      "types": "./dist/fixtures/index.d.ts",
      "import": "./dist/fixtures/index.js"
    },
    "./assertions": {
      "types": "./dist/assertions/index.d.ts",
      "import": "./dist/assertions/index.js"
    },
    "./setup": {
      "types": "./dist/setup/index.d.ts",
      "import": "./dist/setup/index.js"
    },
    "./msw": {
      "types": "./dist/msw/index.d.ts",
      "import": "./dist/msw/index.js"
    },
    "./prisma": {
      "types": "./dist/prisma/index.d.ts",
      "import": "./dist/prisma/index.js"
    },
    "./pact": {
      "types": "./dist/pact/index.d.ts",
      "import": "./dist/pact/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@pact-foundation/pact": "^16.0.4",
    "@prisma/client": "6.3.1",
    "@reason-bridge/common": "workspace:*",
    "@reason-bridge/db-models": "workspace:*",
    "msw": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "20.17.12",
    "typescript": "5.9.3",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {
    "@types/jest": ">=29.0.0",
    "vitest": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "@types/jest": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
