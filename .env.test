# =============================================================================
# Test Environment Configuration for Integration Tests
# =============================================================================
# Used by docker-compose.test.yml and integration test runs
# This file is committed to version control (no secrets)

NODE_ENV=test
LOG_LEVEL=error

# =============================================================================
# Test Database (PostgreSQL via docker-compose.test.yml)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=reasonbridge_test
POSTGRES_PASSWORD=reasonbridge_test
POSTGRES_DB=reasonbridge_test

DATABASE_URL=postgresql://reasonbridge_test:reasonbridge_test@localhost:5433/reasonbridge_test

# =============================================================================
# Test Redis (via docker-compose.test.yml)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_URL=redis://localhost:6380

# =============================================================================
# Test LocalStack (AWS Emulation via docker-compose.test.yml)
# =============================================================================
LOCALSTACK_HOST=localhost
LOCALSTACK_PORT=4567

AWS_ENDPOINT_URL=http://localhost:4567
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# =============================================================================
# Bedrock (Disabled in test - uses mocks)
# =============================================================================
BEDROCK_ENABLED=false

# =============================================================================
# Cognito (Disabled in test - uses mocks)
# =============================================================================
COGNITO_USER_POOL_ID=test-pool
COGNITO_CLIENT_ID=test-client
