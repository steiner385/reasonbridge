{
  "name": "@reason-bridge/notification-service",
  "version": "0.1.0",
  "description": "Notification service with NestJS, Socket.io, and Prisma",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "start:dev": "tsx watch src/main.ts",
    "start:prod": "node dist/main.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:integration": "vitest --run src/__tests__/integration"
  },
  "dependencies": {
    "@reason-bridge/common": "workspace:*",
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-fastify": "^11.1.13",
    "@nestjs/platform-socket.io": "^10.3.0",
    "@nestjs/websockets": "^11.1.13",
    "@prisma/client": "6.3.1",
    "@reason-bridge/db-models": "workspace:*",
    "@reason-bridge/event-schemas": "workspace:*",
    "fastify": "^5.7.4",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.13",
    "@types/node": "25.2.1",
    "@types/socket.io": "^3.0.2",
    "socket.io-client": "^4.6.1",
    "tsx": "^4.7.0",
    "typescript": "5.9.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "Apache-2.0",
  "author": "Tony Stein"
}
