{
  "name": "@reason-bridge/moderation-service",
  "version": "0.1.0",
  "description": "Moderation service for content review and policy enforcement",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "start:dev": "tsx watch src/main.ts",
    "start:prod": "node dist/main.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-fastify": "^10.3.0",
    "@prisma/client": "6.3.1",
    "@reason-bridge/common": "workspace:*",
    "@reason-bridge/db-models": "workspace:*",
    "@reason-bridge/event-schemas": "workspace:*",
    "fastify": "^5.7.2",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.12",
    "@types/node": "20.17.12",
    "@vitest/ui": "^2.1.0",
    "tsx": "^4.7.0",
    "typescript": "5.9.3",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
